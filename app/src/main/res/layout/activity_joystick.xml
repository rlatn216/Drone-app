<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/MainLinerLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <com.zerokol.views.joystickView.JoystickView
        android:id="@+id/joystickView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"

        />

    <Button
        android:id="@+id/gps_btn"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:background="@drawable/smd_v1_gps"
        android:layout_above="@+id/joystickView"
        android:layout_marginBottom="60dp"
        android:layout_alignParentRight="true"

        />



    <Button
        android:id="@+id/smd_up"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:background="@drawable/btn_smd_blue"
        android:text="상승"

        android:layout_toLeftOf="@+id/joystickView"
        android:layout_marginRight="430dp"
        android:layout_below="@+id/InfoLinearLayout"
        android:layout_marginTop="110dp"
        />


    <Button
        android:id="@+id/smd_down"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:background="@drawable/btn_smd_blue"
        android:text="하강"
        android:layout_toLeftOf="@+id/joystickView"
        android:layout_marginRight="430dp"
        android:layout_below="@+id/smd_up"
        android:layout_marginTop="15dp"


        />






    <LinearLayout
        android:id="@+id/InfoLinearLayout"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:orientation="vertical">








        <TableLayout
            android:id="@+id/tableLayout1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/angletextViewLab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="각도"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <TextView
                    android:id="@+id/angleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/none"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/powerTextViewLab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/power_lab"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <TextView
                    android:id="@+id/powerTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/none"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/directionTextViewLab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="방향"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <TextView
                    android:id="@+id/directionTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/none"
                    android:textAppearance="?android:attr/textAppearanceMedium" />




            </TableRow>



        </TableLayout>

    </LinearLayout>

</RelativeLayout>