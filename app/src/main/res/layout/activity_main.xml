<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textViewReciev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:textColor="@color/colorAccent"

        android:textSize="16dp" />


    <android.support.design.widget.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/aaaaaa"
        >
        <android.support.design.widget.TextInputEditText

            android:layout_width="214dp"
            android:layout_height="50dp"
            android:hint="server-ip"
            android:id="@+id/addressText"
            />
    </android.support.design.widget.TextInputLayout>




    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/aaaaaa"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        >

        <android.support.design.widget.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            >
            <android.support.design.widget.TextInputEditText

                android:layout_width="214dp"
                android:layout_height="50dp"
                android:hint="port"
                android:id="@+id/portText"
                />
        </android.support.design.widget.TextInputLayout>

    </RelativeLayout>




    <android.support.design.widget.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/aaaaaa"
        android:layout_centerHorizontal="true"
        >
        <android.support.design.widget.TextInputEditText

            android:layout_width="214dp"
            android:layout_height="50dp"
            android:hint="Send message"
            android:id="@+id/messageText"
            />
    </android.support.design.widget.TextInputLayout>





    <Button
        android:text="clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonClear"
        android:background="@drawable/btn_smd_blue"
        android:layout_below="@+id/aaaaaa"
        android:layout_alignLeft="@+id/aaaaaa"
        android:layout_marginTop="80dp"



        />

    <Button
        android:text="Send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonConnect"
        android:background="@drawable/btn_smd_blue"
        android:layout_below="@+id/aaaaaa"
        android:layout_alignRight="@+id/aaaaaa"
        android:layout_marginTop="80dp"

        />


    <Button
        android:id="@+id/NextBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_smd_blue"

        android:layout_toRightOf="@+id/buttonConnect"
        android:layout_alignTop ="@+id/buttonConnect"
        android:layout_marginLeft="100dp"


        android:text="다음"
        />




</RelativeLayout>